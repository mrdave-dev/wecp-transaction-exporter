{
  "compilerOptions": {
    "target": "ES2017",
    "module": "none",
    "lib": ["es2017"],
    "declaration": true,
    "newLine": "lf",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
